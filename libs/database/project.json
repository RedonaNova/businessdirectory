{
  "targets": {
    "prisma:generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "prisma generate --schema=libs/database/prisma/schema.prisma",
          "npx tsx libs/database/scripts/fix-generated-ts.ts"
        ],
        "cwd": "{workspaceRoot}",
        "parallel": false
      }
    },
    "prisma:migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma migrate dev --schema=libs/database/prisma/schema.prisma",
        "cwd": "{workspaceRoot}"
      }
    },
    "prisma:push": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma db push --schema=libs/database/prisma/schema.prisma",
        "cwd": "{workspaceRoot}"
      }
    },
    "prisma:studio": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prisma studio --schema=libs/database/prisma/schema.prisma",
        "cwd": "{workspaceRoot}"
      }
    }
  }
}
